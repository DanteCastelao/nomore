---
import MarqueeMobile from '../components/MarqueeMobile';
---


<div class="mobile">
    <div class="gradient-top-mobile"></div>
    <div class="gradient-bottom-mobile"></div>
    <div class="top">
        <MarqueeMobile client:only/>
    </div>
    <div class="form">
        <span>DROP1</span>
        <span>COMING SOON</span>               
        <span>DEJA TU MAIL PARA SER NOTIFICADO</span>
        <form class="input" action="https://formspree.io/f/mdoqkvkd" method="POST">
            <input type="email" name="email"/>
            <button type="submit">&#62;</button>
        </form>
    </div>
    <div class="links">
        <a href="/prtyps">PRTYPS</a>
        <a href="https://www.instagram.com/no.more.tm?igsh=eHd3eXJzMmVhczlj">INSTAGRAM</a>
    </div>
    <video class="video" src="teaser.mp4" autoplay muted loop></video>
</div>

<style>
    .mobile {
		display: none;
	}
    a {
		color: var(--text);
        cursor: pointer;
	}
	.links {
		display: flex;
		flex-direction: column;
		flex-grow: 1;
		text-transform: uppercase;
		gap: 1rem;
	}
    @media screen and (max-width: 800px) {
		.mobile {
			display: flex;
			flex-direction: column;
			align-items: center;
            color: #f5f5f5;
		}
		.top {
			display: flex;
			flex-direction: column;
			width: 100%;
		}
		.links {
			display: flex;
			flex-direction: row;
			justify-content: center;
			font-size: 1.3rem;
			align-items: center;
		}
	}
    .active {
        text-transform: lowercase;
        text-decoration: none !important; 
		text-align: end;
        color: var(--text);
		font-size: 1.5rem;
    }
    .active::before {
        content: "- ";
    }
	.show {
		width: 50%;
        padding-top: 6rem;
        display: flex;
        flex-direction: column;
        gap: 6rem;
        box-sizing: border-box;
        padding-bottom: 10rem;
	}
    @media screen and (max-width: 400px) {
        .show {
            width: 70%;
        }
    }
    .show::-webkit-scrollbar {
        display: none;
    }
    .item {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-left: 30%;
        padding-right: 30%;
        align-items: center;
        cursor: pointer;
    }
    .item span {
        text-decoration: underline;
		font-size: 1.3rem;
        text-align: center;
    }
    .active {
        text-transform: lowercase;
        text-decoration: none !important; 
		text-align: end;
        color: var(--text);
		font-size: 1.5rem;
    }
    .active::before {
        content: "- ";
    }
    .info-text {
        display: flex;
        flex-direction: column;
        gap: 1.8rem;
        font-size: 1rem;
    }
    .info-subtext {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }
    .form {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        flex-direction: column;
        display: flex;
        text-align: center;
        align-items: center;
        gap: 1rem;
    }
    .video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }
    .input {
        display: flex;
        flex-direction: row;
        gap: 1rem;
    }
    .input input {
        background: none;
        border: none;
        border-bottom: 2px solid #f5f5f5;
        color: #f5f5f5;
        font-size: 1rem;
    }
    textarea:focus, input:focus{
        outline: none;
    }
    .input button {
        background: none;
        border: none;
        color: #f5f5f5;
        cursor: pointer;
        text-decoration: underline;
        text-decoration-thickness: 2px;
        font-size: 1.2rem;
    }
</style>