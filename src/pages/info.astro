---
import Layout from "../layouts/Layout.astro";
import InfoMobile from "../components/InfoMobile.astro";
import Menu from "../components/Menu.astro";
---

<Layout title="nomore-info">
    <div class="container">
		<div class="gradient-top"></div>
        <div class="gradient-bottom"></div>
		<div class="logo-container">
			<div class="logo">
				<span>nomore</span>
				<div class="justified">
					<span>n</span>
					<span>m</span>
					<span>re</span>
				</div>
				<span>nm</span>
				<div class="last-word">
					<span>n</span>
					<span>m</span>
				</div>
			</div>
		</div>
		<div class="show">
            <div class="info-text">
                <span>no moreâ„¢</span>
                <span>based in Argentina</span>
                <div class="info-subtext">
                    <span>no more logos no more prints</span>
                    <span>no more walking ads</span>
                </div>
				<a href="https://www.instagram.com/no.more.tm/">instagram</a>
				<a href="https://www.dantecastelao.com.ar">web developer</a>
            </div>
        </div>
		<Menu activeLink="info"/>
	</div>
	<InfoMobile />
</Layout>


<style>
	.container {
		display: flex;
		flex-direction: row;
		height: 100vh;
		padding-left: 6%;
        padding-right: 6%;
		overflow: hidden;
	}
	.gradient-top {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 10%;
        background: linear-gradient(to bottom, var(--background) 0%, rgba(0, 0, 0, 0) 100%);
    }
    .gradient-bottom {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 10%;
        background: linear-gradient(to top, var(--background) 0%, rgba(0, 0, 0, 0) 100%);
    }
	.logo-container {
		display: flex;
		margin-top: 2rem;
		user-select: none;
	}
	.logo {
		line-height: 10rem;
		display: flex;
		flex-direction: column;
	}
	.logo span {
		font-size: clamp(1rem, 10vw, 11vw);
	}
	.justified {
		display: flex;
		justify-content: space-between;
	}
	.last-word {
		display: flex;
		flex-direction: column;
		line-height: 8rem;
	}
	a {
		color: var(--text);
		cursor: pointer;
	}
	.a {
		align-self: flex-end;
		text-align: end;
	}
	.show {
		width: 30%;
        padding-top: 4rem;
        display: flex;
        flex-direction: column;
        gap: 6rem;
        box-sizing: border-box;
        display: flex;
        align-items: center;
        justify-content: center;
	}
	@media screen and (max-width: 1200px) {
		.container {
			padding-right: 6%;
			justify-content: space-between;
		}
	}
	@media screen and (max-width: 800px) {
		.container {
			display: none
		}
	}
    .info-text {
        display: flex;
        flex-direction: column;
        gap: 1.8rem;
        font-size: 1rem;
    }
    .info-subtext {
        display: flex;
        flex-direction: column;
    }
</style>